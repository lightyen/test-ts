{
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true
  },
  "compilerOptions": {
    "types": ["@types/node"],
    "strictNullChecks": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "es2021"
  },
  "include": ["src/**/*"]
}
